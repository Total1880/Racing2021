<Page x:Class="Racing2021.Pages.EditorHomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Racing2021.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditorHomePage"
      DataContext="{Binding EditorHomePage, Source={StaticResource Locator}}">

    <Grid>
        <StackPanel>
            <Button 
                Content="Edit Tracks"
                Command="{Binding OpenEditorTracksPageCommand}"/>
            <Button
                Content="Edit Cyclists"
                Command="{Binding OpenEditorCyclistPageCommand}"/>
            <Button
                Content="Edit Teams"
                Command="{Binding OpenEditorTeamsPageCommand}"/>
        </StackPanel>
    </Grid>
</Page>
